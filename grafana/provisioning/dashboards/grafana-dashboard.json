{
  "title": "Personality API Monitoring",
  "panels": [
    {
      "title": "Requests per second",
      "targets": [{
        "expr": "rate(personality_api_requests_total[1m])",
        "legendFormat": "{{method}} {{endpoint}}"
      }],
      "type": "graph"
    },
    {
      "title": "Request Latency (95th percentile)",
      "targets": [{
        "expr": "histogram_quantile(0.95, rate(personality_api_request_duration_seconds_bucket[5m]))"
      }],
      "type": "graph"
    }
  ]
}

