{
  "dashboard": {
    "title": "Telco Churn API Monitoring",
    "description": "Real-time monitoring of ML prediction API",
    "tags": ["mlops", "api", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Requests per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[1m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "description": "Request rate per endpoint"
      },
      {
        "id": 2,
        "title": "Request Latency (95th percentile)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "format": "s",
            "instant": false,
            "intervalFactor": 1,
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
        "description": "95th percentile response time"
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(http_requests_total[5m]))",
            "format": "percentunit",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8},
        "max": 1,
        "min": 0,
        "thresholds": {
          "steps": [
            {"color": "green", "value": null},
            {"color": "yellow", "value": 0.05},
            {"color": "red", "value": 0.1}
          ]
        }
      },
      {
        "id": 4,
        "title": "Prediction Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(prediction_probability_bucket[5m])",
            "format": "heatmap",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "description": "Distribution of prediction probabilities"
      },
      {
        "id": 5,
        "title": "Model Load Status",
        "type": "piechart",
        "targets": [
          {
            "expr": "model_load_total",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "pieType": "pie"
      },
      {
        "id": 6,
        "title": "System CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU {{instance}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
        "description": "CPU usage percentage"
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s"
  }
}